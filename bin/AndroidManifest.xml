<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.blacksheep.netlynx"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.hmkcode.android.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.hmkcode.android.gcm.permission.C2D_MESSAGE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="dev.blacksheep.netlynx.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="dev.blacksheep.netlynx.CheckPinActivity" >
        </activity>
        <activity android:name="dev.blacksheep.netlynx.SettingsActivity" >
        </activity>
        <activity android:name="dev.blacksheep.netlynx.WelcomeActivity" >
        </activity>
        <activity android:name="dev.blacksheep.netlynx.HistoryActivity" >
        </activity>
        <activity android:name="dev.blacksheep.netlynx.SiteLocationActivity" >
        </activity>
        <activity android:name="dev.blacksheep.netlynx.MonitoringSitesActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dev.blacksheep.netlynx.AlertsActivity" >
        </activity>

        <receiver
            android:name="dev.blacksheep.netlynx.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="dev.blacksheep.android.gcm" />
            </intent-filter>
        </receiver>

        <service android:name="dev.blacksheep.netlynx.gcm.GCMMessageHandler" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>