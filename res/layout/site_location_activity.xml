<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.netlynxtech.noiselynx"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/bUpdateLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:text="@string/site_location_show_text"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        custom:pb_colorComplete="@color/green_complete"
        custom:pb_colorError="@color/red_error"
        custom:pb_colorNormal="@color/blue_normal"
        custom:pb_colorPressed="@color/blue_pressed"
        custom:pb_colorProgress="@color/purple_progress"
        custom:pb_textComplete="Success"
        custom:pb_textError="Error"
        custom:pb_textProgress="Loading" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bUpdateLocation"
        android:layout_below="@+id/relativeLayout1" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/card" >

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvLocationLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvLocationLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvCurrentDBA"
            android:layout_alignBottom="@+id/tvCurrentDBA"
            android:layout_toRightOf="@+id/tvCurrentDBA"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="@string/dba"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignBottom="@+id/tvDevice"
            android:layout_alignLeft="@+id/tvTime"
            android:background="#33b5e5"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvCurrentDBA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTime"
            android:paddingBottom="1dp"
            android:text="000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/separator"
            android:gravity="right"
            android:paddingRight="13dp"
            android:text="TextView"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvLEQ12hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/tvLEQ1hour"
            android:layout_toLeftOf="@+id/textView4"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/separator"
            android:layout_below="@+id/tvCurrentDBA"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/dba"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:paddingLeft="5dp"
            android:text="@string/dba"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/tvLEQ1hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_toLeftOf="@+id/textView1"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvLEQ12hour"
            android:layout_alignBottom="@+id/tvLEQ12hour"
            android:layout_toLeftOf="@+id/tvLEQ12hour"
            android:paddingRight="5dp"
            android:text="@string/leq_twelve_hour"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />

        <com.netlynxtech.noiselynx.classes.TextViewPlus
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:text="@string/leq_one_hour"
            android:textAppearance="?android:attr/textAppearanceMedium"
            font:customFont="roboto.ttf" />
    </RelativeLayout>

</RelativeLayout>